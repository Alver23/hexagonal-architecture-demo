{
  "name": "hexagonal-architecture-demo",
  "version": "0.1.0",
  "description": "Demonstration of how to structure an application with hexagonal architecture in the frontend and backend.",
  "main": "src/backend/buld/index.js",
  "scripts": {
    "linter": "eslint --ext ts src/ --ignore-path .eslintignore",
    "linter:fix": "npm run linter -- --fix",
    "linter:report": "eslint --ext ts src/ -f html -o reports/lint.html",
    "prettier": "prettier --config .prettierrc --ignore-path ./.prettierignore --write src/**/*.ts",
    "prepare": "husky install",
    "test": "jest --logHeapUsage",
    "test:watch": "npm test -- --verbose --watch",
    "server:build": "gulp server:build",
    "server:dev": "DEBUG=hexagonal-architecture-api:* gulp server:dev",
    "server:dev:watch": "DEBUG=hexagonal-architecture-api:* gulp server:watch",
    "server:start": "node src/backend/build/index.js",
    "server:start:debug": "npm run build && node --inspect src/backend/build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Alver23/hexagonal-architecture-demo.git"
  },
  "keywords": [
    "architecture",
    "hexagonnal",
    "hexagonal",
    "architecture",
    "frontend",
    "backend"
  ],
  "author": "Alver Grisales",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alver23/hexagonal-architecture-demo/issues"
  },
  "homepage": "https://github.com/Alver23/hexagonal-architecture-demo#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-healthcheck": "^0.1.0",
    "express-rate-limit": "^5.3.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "method-override": "^3.0.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/gulp-nodemon": "0.0.34",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-shell": "^0.8.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "jest-html-reporters": "^2.1.6",
    "lint-staged": "^11.1.2",
    "node-notifier": "^10.0.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "_moduleAliases": {
    "@backend": "src/backend/build"
  }
}
