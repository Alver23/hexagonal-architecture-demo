{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["ES5"],
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@backend/*": ["./backend"],
            "@frontend/*": ["./frontend"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
    },
    "exclude": [
        "node_modules"
    ],
}
