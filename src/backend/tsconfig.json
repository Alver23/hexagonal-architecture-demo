{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["ES2020"],
    "target": "ES2020",
    "outDir": "./build",
    "module": "commonjs",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@backend/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
