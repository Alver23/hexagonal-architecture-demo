{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@shared-modules/*": ["./src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
